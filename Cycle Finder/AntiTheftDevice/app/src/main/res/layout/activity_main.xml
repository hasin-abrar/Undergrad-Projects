<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"


            android:layout_height="92dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="94dp"
            android:fontFamily="cursive"
            android:text="Tracker Machine"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="50sp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="128dp" />


        <Button
            android:id="@+id/button2"
            android:layout_width="247dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:onClick="startMonitoring"
            android:text="Start Monitoring"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="240dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/button2"
            android:onClick="trackMyRide"
            android:text="Track My Vehicle"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="309dp" />

        <Button
            android:id="@+id/stopMonitorButton"
            android:layout_width="247dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="182dp"
            android:background="@drawable/button"
            android:onClick="stopMonitoring"
            android:text="Stop Monitoring"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="240dp" />


        <Button
            android:id="@+id/cameraOn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="109dp"
            android:background="@drawable/button3"
            android:onClick="goToServer"
            android:text="Camera On"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="309dp" />


        <Button
            android:id="@+id/bluetooth_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:onClick="connectDevice"
            android:text="@string/connect_device"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Status:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bluetoothStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.9"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/connect_your_device"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>